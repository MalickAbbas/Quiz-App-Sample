<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LABEXAM"
        tools:targetApi="31">
        <activity
            android:name=".WeatherDetailScreen"
            android:exported="false"
            android:label="@string/title_activity_weather_detail_screen"
            android:theme="@style/Theme.LABEXAM" />
        <activity
            android:name=".CitySelectionScreen"
            android:exported="false"
            android:label="@string/title_activity_city_selection_screen"
            android:theme="@style/Theme.LABEXAM" />
        <activity
            android:name=".SplashScreen"
            android:exported="false"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.LABEXAM" />
        <activity
            android:name=".ui.theme.ui.theme.SplashScreen"
            android:exported="false"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.LABEXAM" />
        <activity
            android:name=".ui.theme.splash"
            android:exported="false"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.LABEXAM" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LABEXAM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>